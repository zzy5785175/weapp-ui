<ui-overlay
    wx:if="{{inited && overlay}}"
    visible="{{visible}}"
    bind:click="onClickOverlay"
/>

<view
    class="ui-popup ui-popup--{{position}} custom-class"
    wx:if="{{inited}}"
    style="z-index: {{zIndex}}; -webkit-animation: ui-{{position}}-{{type}} {{duration}}ms ease both;animation: ui-{{position}}-{{type}} {{duration}}ms ease both; {{display ? '' : 'display: none;'}}{{customStyle}}">
    <slot/>
</view>